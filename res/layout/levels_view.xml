<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/levels_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_level"
    android:columnCount="8"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="13" >

    <Button
        android:id="@+id/back_btn"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/backbtn" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Button02"
        android:layout_centerHorizontal="true"
        android:background="@drawable/level1"
        android:contentDescription="@string/desc" />
    
    <Button
        android:id="@+id/Button02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="36dp"
        android:background="@drawable/level1"
        android:contentDescription="@string/desc" />

    <Button
        android:id="@+id/level_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/Button01"
        android:layout_alignBottom="@+id/Button01"
        android:layout_alignRight="@+id/Button02"
        android:layout_marginRight="28dp"
        android:background="@drawable/level1"
        android:contentDescription="@string/desc" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/Button04"
        android:layout_toLeftOf="@+id/level_1"
        android:background="@drawable/level1"
        android:contentDescription="@string/desc" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/back_btn"
        android:layout_toRightOf="@+id/back_btn"
        android:background="@drawable/level1"
        android:contentDescription="@string/desc" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/level_1"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/back_btn"
        android:gravity="center"
        android:text="@string/levels_title"
        android:textColor="#FF9F06"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>