<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_level"
    android:orientation="vertical" >
    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true" android:id="@+id/tableLayout1">
	    <TableRow>

	        <TextView
	            android:id="@+id/name_title"
	            android:gravity="left"
	            android:padding="10dp"
	            android:text="@string/name_cell"
	            android:textStyle="bold" />

	        <TextView
	            android:id="@+id/score_title"
	            android:gravity="center"
	            android:padding="10dp"
	            android:text="@string/score_cell"
	            android:textStyle="bold"	/>
	    </TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/player_1"
	            android:gravity="left"
	            android:padding="10dip"
	            android:text="Joe"	/>
	        <TextView
	            android:id="@+id/score_1"
	            android:gravity="right"
	            android:padding="10dip"	
	            android:text="700"	/>
	    </TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/player_2"
	            android:gravity="left"
	            android:padding="10dip"
	            android:text="John"	/>
	        <TextView
	            android:id="@+id/score_2"
	            android:gravity="right"
	            android:padding="10dip"
	            android:text="680"	/>
	    </TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/player_3"
	            android:gravity="left"
	            android:padding="10dip"
	            android:text="Jennifer"	/>
	        <TextView
	            android:id="@+id/score_3"
	            android:gravity="right"
	            android:padding="10dip"
	            android:text="675"	/>
	    </TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/player_4"
	            android:gravity="left"
	            android:padding="10dip"
	            android:text="Rose"
	            	/>
	        <TextView
	            android:id="@+id/score_4"
	            android:gravity="right"
	            android:padding="10dip"
	            android:text="550"	/>
	    </TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/player_5"
	            android:gravity="left"
	            android:padding="10dip"
	            android:text="Jack"	/>
	        <TextView
	            android:id="@+id/score_5"
	            android:gravity="right"
	            android:padding="10dip"
	            android:text="250"	/>
	    </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/tableLayout1"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/tableLayout1"
        android:background="@drawable/backbtn" />

    <TextView
        android:id="@+id/high_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/back_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp"
        android:layout_toEndOf="@id/back_btn"
        android:gravity="center"
        android:text="@string/high_scores_title"
        android:textColor="#FF9F06"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>
