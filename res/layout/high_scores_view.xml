<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_level" >
    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true" android:id="@+id/tableLayout1">
	    <TableRow>

	        <TextView
	            android:id="@+id/name_title"
	            android:gravity="left"
	            android:padding="10dp"
	            android:text="@string/name_cell"
	             android:textColor="#345803"
	            android:textStyle="bold" />

	        <TextView
	            android:id="@+id/score_title"
	            android:gravity="center"
	            android:padding="10dp"
	            android:text="@string/score_cell"
	             android:textColor="#345803"
	            android:textStyle="bold"	/>
	    </TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/player_1"
	            android:gravity="left"
	            android:padding="10dip"
	            android:textColor="#67922E"
	            android:text="@string/Joe"	/>
	        <TextView
	            android:id="@+id/score_1"
	            android:gravity="right"
	            android:padding="10dip"	
	            android:textColor="#67922E"
	            android:text="@string/700"	/>
	    </TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/player_2"
	            android:gravity="left"
	            android:padding="10dip"
	            android:textColor="#67922E"
	            android:text="@string/John"	/>
	        <TextView
	            android:id="@+id/score_2"
	            android:gravity="right"
	            android:padding="10dip"
	            android:textColor="#67922E"
	            android:text="@string/680"	/>
	    </TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/player_3"
	            android:gravity="left"
	            android:padding="10dip"
	            android:textColor="#67922E"
	            android:text="@string/Jennifer"	/>
	        <TextView
	            android:id="@+id/score_3"
	            android:gravity="right"
	            android:padding="10dip"
	            android:textColor="#67922E"
	            android:text="@string/675"	/>
	    </TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/player_4"
	            android:gravity="left"
	            android:padding="10dip"
	            android:textColor="#67922E"
	            android:text="@string/Rose"
	            	/>
	        <TextView
	            android:id="@+id/score_4"
	            android:gravity="right"
	            android:padding="10dip"
	            android:textColor="#67922E"
	            android:text="@string/550"	/>
	    </TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/player_5"
	            android:gravity="left"
	            android:padding="10dip"
	            android:textColor="#67922E"
	            android:text="@string/Jack"	/>
	        <TextView
	            android:id="@+id/score_5"
	            android:gravity="right"
	            android:padding="10dip"
	            android:textColor="#67922E"
	            android:text="@string/250"	/>
	    </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/backbtn" />

        <TextView
            android:id="@+id/high_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tableLayout1"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/back_btn"
            android:text="@string/high_scores_title"
            android:textColor="#007F00"
            android:textSize="40sp"
            android:textStyle="bold" 
            android:layout_marginLeft="30dp"/>

</RelativeLayout>
