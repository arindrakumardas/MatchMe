<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

            <ImageView
                android:id="@+id/medusa_shadows"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/crayfish_shadows"
                android:layout_marginBottom="56dp"
                android:layout_toLeftOf="@+id/crayfish_shadows"
                android:contentDescription="@string/desc"
                android:src="@drawable/medusa_shadows" />

            <ImageView
                android:id="@+id/crayfish_shadows"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="134dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/crayfish_shadows" />

            <ImageView
                android:id="@+id/dolphin_shadows"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="46dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/dolphin_shadows" />
 
</RelativeLayout>
