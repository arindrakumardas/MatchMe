<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82D3F0"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/level_4_image_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/desc"
        android:src="@drawable/medusa" />

    <ImageView
        android:id="@+id/level_4_image_5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/level_4_image_3"
        android:layout_toRightOf="@+id/level_4_image_3"
        android:contentDescription="@string/desc"
        android:src="@drawable/medusa" />

    <ImageView
        android:id="@+id/level_4_image_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/desc"
        android:src="@drawable/medusa"/>

    <ImageView
        android:id="@+id/level_4_image_3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/level_4_image_1"
        android:contentDescription="@string/desc"
        android:src="@drawable/medusa"/>

    <ImageView
        android:id="@+id/level_4_image_8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/level_4_image_4"
        android:contentDescription="@string/desc"
        android:src="@drawable/medusa" />

    <ImageView
        android:id="@+id/level_4_image_7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/level_4_image_5"
        android:contentDescription="@string/desc"
        android:src="@drawable/medusa" />

    <ImageView
        android:id="@+id/level_4_image_6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/level_4_image_8"
        android:layout_toLeftOf="@+id/level_4_image_8"
        android:contentDescription="@string/desc"
        android:src="@drawable/medusa" />

    <ImageView
        android:id="@+id/level_4_image_4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/level_4_image_2"
        android:layout_toRightOf="@+id/level_4_image_2"
        android:contentDescription="@string/desc"
        android:src="@drawable/medusa" />

</RelativeLayout>