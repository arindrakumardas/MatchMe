    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#82D3F0">

              <ImageView
                  android:id="@+id/level_1_image_1"
                  android:layout_width="120dp"
                  android:layout_height="140dp"
                  android:layout_alignParentTop="true"
                  android:layout_marginTop="22dp"
                  android:layout_toLeftOf="@+id/level_1_image_2"
                  android:background="@drawable/medusa"
                  android:contentDescription="@string/desc" />

              <ImageView
                  android:id="@+id/level_1_image_2"
                  android:layout_width="120dp"
                  android:layout_height="140dp"
                  android:layout_alignParentRight="true"
                  android:layout_alignTop="@+id/level_1_image_1"
                  android:background="@drawable/medusa"
                  android:contentDescription="@string/desc" />
    
</RelativeLayout>
