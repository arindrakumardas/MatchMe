<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/level_5_shadow_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/level_5_shadow_1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="26dp"
        android:rotation="15"
        android:contentDescription="@string/desc" />

    <ImageView
        android:id="@+id/level_5_shadow_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:contentDescription="@string/desc"/>

    <ImageView
        android:id="@+id/level_5_shadow_5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/level_5_shadow_1"
        android:layout_marginRight="28dp"
        android:contentDescription="@string/desc"
        android:rotation="45" />

    <ImageView
        android:id="@+id/level_5_shadow_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/level_5_shadow_3"
        android:contentDescription="@string/desc"
        android:rotation="30" />

    <ImageView
        android:id="@+id/level_5_shadow_4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/level_5_shadow_5"
        android:contentDescription="@string/desc" />

</RelativeLayout>