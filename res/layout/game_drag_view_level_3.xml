<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#82D3F0">

               <ImageView
                   android:id="@+id/level_3_image_1"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentTop="true"
                   android:contentDescription="@string/desc"
                   android:src="@drawable/medusa" />

                 <ImageView
                     android:id="@+id/level_3_image_5"
                     android:layout_width="60dp"
                     android:layout_height="60dp"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentTop="true"
                     android:layout_marginLeft="36dp"
                     android:layout_marginTop="34dp"
                     android:contentDescription="@string/desc"
                     android:src="@drawable/medusa" />

                     <ImageView
                         android:id="@+id/level_3_image_4"
                         android:layout_width="60dp"
                         android:layout_height="60dp"
                         android:layout_alignParentTop="true"
                         android:layout_marginLeft="19dp"
                         android:layout_toRightOf="@+id/level_3_image_1"
                         android:contentDescription="@string/desc"
                         android:src="@drawable/medusa" />

                     <ImageView
                         android:id="@+id/level_3_image_2"
                         android:layout_width="60dp"
                         android:layout_height="60dp"
                         android:layout_alignTop="@+id/level_3_image_3"
                         android:layout_toRightOf="@+id/level_3_image_6"
                         android:contentDescription="@string/desc"
                         android:src="@drawable/medusa" />

                     <ImageView
                         android:id="@+id/level_3_image_6"
                         android:layout_width="60dp"
                         android:layout_height="60dp"
                         android:layout_alignLeft="@+id/level_3_image_3"
                         android:layout_alignParentTop="true"
                         android:layout_marginLeft="42dp"
                         android:contentDescription="@string/desc"
                         android:src="@drawable/medusa" />

                     <ImageView
                         android:id="@+id/level_3_image_3"
                         android:layout_width="60dp"
                         android:layout_height="60dp"
                         android:layout_alignTop="@+id/level_3_image_5"
                         android:layout_centerHorizontal="true"
                         android:contentDescription="@string/desc"
                         android:src="@drawable/medusa" />
               
</RelativeLayout>
