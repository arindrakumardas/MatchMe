<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeleft"
        android:textColor="#000000"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/time_left_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeleftvalue"
        android:layout_below="@+id/time_left"
        android:textColor="#000000"
        android:textSize="14sp" />

     <TextView
         android:id="@+id/score"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/time_left"
         android:layout_alignBottom="@+id/time_left"
         android:layout_alignParentRight="true"
         android:layout_marginRight="33dp"
         android:text="@string/score"
         android:textColor="#000000"
         android:textSize="14sp" />

         <TextView
             android:id="@+id/score_value"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/time_left_value"
             android:layout_alignLeft="@+id/score"
             android:layout_alignTop="@+id/time_left_value"
             android:text="@string/scorevalue"
             android:textColor="#000000"
             android:textSize="14sp" />

         <TextView
             android:id="@+id/level"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/score_value"
             android:layout_marginLeft="54dp"
             android:layout_toRightOf="@+id/time_left"
             android:text="@string/level"
             android:textColor="#000000"
             android:textSize="14sp" />

         <ImageView
             android:id="@+id/volume"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_alignLeft="@+id/level"
             android:layout_alignRight="@+id/level"
             android:layout_alignTop="@+id/score_value"
             android:contentDescription="@string/desc"
             android:src="@drawable/pause" />

</RelativeLayout>