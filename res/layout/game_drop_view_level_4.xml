<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/level_4_shadow_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/level_4_shadow_2"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/desc"
        android:rotation="30" />

    <ImageView
        android:id="@+id/level_4_shadow_3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/level_4_shadow_1"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/level_4_shadow_4"
        android:contentDescription="@string/desc" />

    <ImageView
        android:id="@+id/level_4_shadow_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/level_4_shadow_4"
        android:contentDescription="@string/desc"
        android:rotation="60" />

    <ImageView
        android:id="@+id/level_4_shadow_4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/desc" />

</RelativeLayout>