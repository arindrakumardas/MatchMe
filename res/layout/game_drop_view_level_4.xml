<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/level_4_shadow_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="56dp"
        android:contentDescription="@string/desc"/>

    <ImageView
        android:id="@+id/level_4_shadow_3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/level_4_shadow_1"
        android:contentDescription="@string/desc"/>

    <ImageView
        android:id="@+id/level_4_shadow_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/level_4_shadow_3"
        android:layout_toRightOf="@+id/level_4_shadow_1"
        android:contentDescription="@string/desc"/>

    <ImageView
        android:id="@+id/level_4_shadow_4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/level_4_shadow_2"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="21dp"
        android:contentDescription="@string/desc"/>

</RelativeLayout>