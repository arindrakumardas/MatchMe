<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_level" >

         <Button
             android:id="@+id/continue_btn"
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_alignBaseline="@+id/home_btn"
             android:layout_alignBottom="@+id/home_btn"
             android:layout_alignParentRight="true"
             android:layout_marginRight="46dp"
             android:background="@drawable/play_button"
             android:contentDescription="@string/desc" />

         <Button
             android:id="@+id/home_btn"
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/game_end_msg"
             android:layout_marginLeft="32dp"
             android:layout_marginTop="16dp"
             android:background="@drawable/backbtn"
             android:contentDescription="@string/desc" />

         <TextView
             android:id="@+id/game_end_msg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:layout_marginTop="96dp"
             android:text="@string/end_msg"
             android:textColor="#345803"
             android:textSize="24sp" />
    
</RelativeLayout>
