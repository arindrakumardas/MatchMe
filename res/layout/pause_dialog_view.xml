<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pause_dialog_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_level"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/next_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/restart_btn"
        android:layout_alignBottom="@+id/restart_btn"
        android:layout_marginRight="21dp"
        android:layout_toLeftOf="@+id/restart_btn"
        android:background="@drawable/play_button" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="134dp"
        android:layout_toRightOf="@+id/restart_btn"
        android:background="@drawable/backbtn" />

    <Button
        android:id="@+id/restart_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/back_btn"
        android:layout_alignBottom="@+id/back_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/refresh_button" />

</RelativeLayout>