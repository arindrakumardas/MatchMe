<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.kth.csc.iprog.matchme.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:name="se.kth.csc.iprog.matchme.android.MatchMeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
       
        <!--  Splash Screen -->
        
        <activity
            android:name="se.kth.csc.iprog.matchme.android.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
     
        
        <!-- Start activity -->
        
        <activity
            android:name="se.kth.csc.iprog.matchme.android.StartActivity"
            android:label="@string/app_name" >
        </activity>
        
        <!-- Game activity -->
        <activity
            android:name="se.kth.csc.iprog.matchme.android.GameActivity"
            android:label="@string/app_name" >
        </activity>
        
        <!-- High Score activity -->
        <activity
            android:name="se.kth.csc.iprog.matchme.android.HighscoreActivity"
            android:label="@string/app_name" >
        </activity>
        
        <!-- Level activity -->
        <activity
            android:name="se.kth.csc.iprog.matchme.android.LevelActivity"
            android:label="@string/app_name" >
        </activity>
        
           <!-- Pause activity -->
        <activity
            android:name="se.kth.csc.iprog.matchme.android.PauseActivity"
            android:label="@string/app_name" >
        </activity>
        
         <!-- End activity -->
        <activity
            android:name="se.kth.csc.iprog.matchme.android.EndActivity"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>
